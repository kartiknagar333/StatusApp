<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/gallerylayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/topbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/topname"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:shadowDx="1"
                android:shadowRadius="1"
                android:fontFamily="@font/bold"
                android:shadowDy="1"
                android:shadowColor="@color/blackblur"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingLeft="25dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/clear"
                android:paddingHorizontal="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_baseline_clear_all_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/download"
                android:paddingHorizontal="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_outline_file_download_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/homemenu"
                android:paddingHorizontal="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/white_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:orientation="horizontal"
            android:layout_below="@+id/topname"
            android:paddingHorizontal="5dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/whatsapp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:background="@drawable/select_wa"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/empty"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_whatsapp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/insta"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                android:focusable="true"
                app:cardElevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/empty"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/insta"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/other"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                app:cardElevation="0dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/empty"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_below="@+id/topbanner"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/actionbar_background"
        android:background="@color/blackblur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>