<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/image_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/serview"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:background="@drawable/darkbackbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_url"
            android:hint="Search Photo"
            android:imeOptions="actionSearch"
            android:textSize="14dp"
            android:padding="13dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sansmedium"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/empty"
            android:textColorLink="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/close"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/searh_list"
        android:visibility="gone"
        android:dividerHeight="0dp"
        android:layout_below="@id/serview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/noimg_image"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_undraw_photograph_re_up3b"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <Button
        android:id="@+id/tryagain"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/noimg_image"
        android:gravity="center"
        android:shadowDx="1"
        android:textSize="16dp"
        android:shadowRadius="1"
        android:shadowDy="1"
        android:fontFamily="@font/sansmedium"
        android:background="@color/empty"
        android:shadowColor="@color/blackblur"
        android:padding="20dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cate_list"
        android:layout_below="@+id/searh_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/layout_animation"
        android:paddingBottom="50dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_site"
        android:layout_above="@id/btn_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:borderWidth="0dp"
        android:tint="@color/white"
        app:elevation="1dp"
        android:src="@drawable/ic_outline_category_24"
        android:backgroundTint="@color/blackGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_search"
        android:layout_alignParentRight="true"
        android:layout_above="@id/cate_list"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:borderWidth="0dp"
        android:tint="@color/black"
        app:elevation="1dp"
        android:src="@drawable/ic_search_black_24dp"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cate_list"
        android:paddingHorizontal="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>