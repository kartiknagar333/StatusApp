<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rate"
            android:text="Rate Us"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:drawablePadding="30dp"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/ic_outline_star_rate_24"
            android:textSize="16dp"
            android:clickable="true"
            android:focusable="true"
            android:shadowColor="@color/blackblur"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:foreground="?selectableItemBackground"
            android:fontFamily="@font/sansmedium"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shareapp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:text="Share App Link"
            android:textSize="16dp"
            android:clickable="true"
            android:drawablePadding="30dp"
            android:drawableLeft="@drawable/ic_outline_link_24"
            android:focusable="true"
            android:shadowColor="@color/blackblur"
            android:shadowDx="2"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:foreground="?selectableItemBackground"
            android:fontFamily="@font/sansmedium"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/aboutapp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/logo"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="About StatusAPP"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:paddingVertical="20dp"
                android:fontFamily="@font/sansmedium"
                android:textColor="@color/white"
                android:shadowColor="@color/blackblur"
                android:shadowDx="2"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    </io.alterac.blurkit.BlurLayout>
</RelativeLayout>
